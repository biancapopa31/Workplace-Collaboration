@model Workplace_Collaboration.Models.Channel
<h2 class="text-center mt-5">Create Channel</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Channel",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Name", "Channel Name")
                <br />
                @Html.TextBox("Name", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Description", "Channel Description")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })

                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
                <br />
                <br />

                <button class="btn btn-success" type="submit">Create Channel</button>

            }

        </div>
    </div>
</div>


