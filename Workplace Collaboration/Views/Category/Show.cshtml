

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}


<body class="bg-light">

    <div class="card mt-3 p-4">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center">@Model.Channel.Name</h3>
                <h4 class="text-center">@Model.Category.Name</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div id="chat-messages" class="message-container mb-3">
                    <!-- Display chat messages here -->
                    @foreach (var message in Model.Messages)
                    {
                        <div class="message-bubble border-top p-2">
                            <strong>@message.User.UserName:</strong> - <samall>@message.SentDate.ToString("hh:mm tt")</samall>
                            <p> @message.Content </p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Type your message...">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


