@model Workplace_Collaboration.Models.Category

<h2 class="text-center mt-5">Add a category to @ViewBag.ChannelName</h2>
<br />
<div class="container mt-3">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Category",
            method: FormMethod.Post, 
            routeValues: new { channelId = ViewBag.ChannelId}))
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Name", "Category Name")
                <br />
                @Html.TextBox("Name", null, new { @class = "form-control" })
                @Html.ValidationMessage("Name", null, new { @class = "text-danger"})

                <br />

                <button class="btn btn-success" type="submit">Add Category</button>

            }

        </div>
    </div>
</div>